<%- include('partials/header'); -%>

<h1>Home</h1>
<p><%= homeContent %></p>
<p>All users can see all posts. Leave a story, poem, thought, or even your shopping list. It's open and easy!</p>
<hr>

<% posts.forEach(function(post) { %>

  <h1><%= post.title %></h1>

  <% if (post.body.length > 100) { %>
      <% let postPreview = post.body.substring(0, 100) + '... '; %>
      <p>
      <%= postPreview %>
      <a href="<%= '/posts/' + post._id %>"> Read More</a>
      </p>
  <% } else { %>
    <p><%= post.body %><a href="<%= '/posts/' + post._id %>"> Read More</a></p>
  <% }; %>

<% }); %>

<%- include('partials/footer'); -%>
